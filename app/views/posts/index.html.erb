<h1>Listing posts</h1>
<input type="text" name="location_field" id="location_field"/><input type="text" name="tag_field" id="tag_field"/><div id="search_button" class="button">Search</div>
<table>
  <tr>
    <th>Content</th>
    <th>Location</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= post.location.first %></td>
    <td><%= post.tags.join(',') %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
